<div class="container">
	<h1>All Products</h1>
  <table class="table table-sm table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Product Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.category.name %></td>
          <td><%= product.stock %></td>
          <td><%= product.price %></td>
          <td>
            <%= link_to 'Show', admin_product_path(product), class:"btn btn-light" %>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>
</div>
