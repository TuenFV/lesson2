<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <% if type == "notice" %>
      <div class="alert alert-success d-flex align-items-center alert-dismissible" role="alert" >
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  <% end %>
<% end %>